{{>layouts/header}}
<table class="table">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody class="table-group-divider">
    {{#article}}
        <tr>
            <th>{{id}}</th>
            <td><a href="/articles/{{id}}">{{title}}</a></td>
            <td>{{content}}</td>
        </tr>
    {{/article}}
    </tbody>
</table>

<a class = "btn btn-primary" href="/articles/{{article.id}}/edit">Edit</a>
<a class = "btn btn-primary" href="/articles/{{article.id}}/delete">Delete</a>
<a href="/articles/new">new article</a>
<a href="/articles">articles list</a>

{{>layouts/footer}}